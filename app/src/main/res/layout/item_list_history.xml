<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:weightSum="10"
        android:padding="10dp"
        android:orientation="horizontal"
        android:id="@+id/relative_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_order_type"
                android:layout_alignParentStart="true"
                android:background="@drawable/bg_text"
                android:textColor="@color/enable"
                android:text="Dùng lẻ"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/txt_order_type"
                android:id="@+id/date_order"
                android:text="12/09/2019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/date_order"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/txt_order_type"
                android:id="@+id/date_order_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ca_order"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:layout_below="@+id/date_order"
                android:text="Ca sáng (08:00 - 11:30)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/icon_diadiem"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ca_order"
                android:src="@drawable/ic_placeholder"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_toRightOf="@id/icon_diadiem"
                android:layout_marginLeft="10dp"
                android:id="@+id/diadiem"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ca_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/diadiem"
                android:layout_below="@+id/ca_order"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/gia"
                android:textColor="#FF258BCF"
                android:textStyle="bold"
                android:layout_below="@+id/diadiem"
                android:layout_marginTop="5dp"
                android:text="217,000đ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center_horizontal"
                android:textColor="#f20"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:id="@+id/ma_hoadon"
                android:text="HĐ: 531561"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_account_circle_black_24dp"
                android:id="@+id/avatar_cus"
                android:layout_centerInParent="true"
                android:layout_below="@+id/ma_hoadon"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/txt_cus_name"
                android:gravity="center"
                android:text="Nguyễn Văn A"
                android:layout_below="@+id/avatar_cus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relative_item"
        android:background="#DDF6FA"
        android:layout_width="match_parent"
        android:layout_height="15dp">

    </RelativeLayout>

</RelativeLayout>